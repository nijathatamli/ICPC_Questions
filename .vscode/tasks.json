{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ Build",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "GCC C++ build task"
        }
    ]
}
